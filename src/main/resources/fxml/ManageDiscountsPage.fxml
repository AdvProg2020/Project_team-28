<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import graphics.TopBar?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import java.net.URL?>
<FlowPane xmlns:fx="http://javafx.com/fxml" alignment="CENTER"
          xmlns="http://javafx.com/javafx"
          fx:controller="graphics.ManageDiscountsPage"
          prefHeight="400.0" prefWidth="600.0">
    <VBox fx:id="mainPane" prefWidth="600">
        <TopBar/>
        <HBox>
            <JFXButton fx:id="addButton" styleClass="my-button" text="Add New Discount" onAction="#newDiscountPressed"/>
            <JFXButton styleClass="my-button" text="Refresh" onAction="#refreshPressed"/>
        </HBox>
    </VBox>
    <stylesheets>
        <URL value="@../stylesheets/main.css"/>
    </stylesheets>
</FlowPane>
