<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXTextField?>
<?import graphics.TopBar?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import java.net.URL?>
<ScrollPane xmlns:fx="http://javafx.com/fxml"
            xmlns="http://javafx.com/javafx"
            fx:controller="graphics.AddCategoryPage"
            prefHeight="400.0" prefWidth="600.0">

    <VBox prefWidth="600.0">
        <VBox fx:id="mainPane">
            <TopBar/>
        </VBox>
        <HBox>
            <JFXTextField fx:id="name" promptText="name" labelFloat="true" maxWidth="Infinity"/>
            <JFXButton styleClass="my-button" text="Add New Property" onAction="#newPropertyPressed"/>
            <JFXButton styleClass="my-button" text="Submit" onAction="#submitPressed"/>
        </HBox>
    </VBox>

    <stylesheets>
        <URL value="@../stylesheets/main.css"/>
    </stylesheets>

</ScrollPane>
